<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10609" id="com.mobit365.app" version="1.6.9" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>Mobit</name>
    <description>
        Mobit project!
    </description>
    <icon src="src/static/nansen_mobit-365_logo_W.png" />
    <author email="dev@mobit365.com" href="http://mobit365.com">
        Developer
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="http://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="src/static/nansen_mobit-365_logo_W.png" />
        <splash density="land-hdpi" src="src/static/splash/screen-hdpi-landscape.png" />
        <splash density="land-ldpi" src="src/static/splash/screen-ldpi-landscape.png" />
        <splash density="land-mdpi" src="src/static/splash/screen-mdpi-landscape.png" />
        <splash density="land-xhdpi" src="src/static/splash/screen-xhdpi-landscape.png" />
        <splash density="port-hdpi" src="src/static/splash/screen-hdpi-portrait.png" />
        <splash density="port-ldpi" src="src/static/splash/screen-ldpi-portrait.png" />
        <splash density="port-mdpi" src="src/static/splash/screen-mdpi-portrait.png" />
        <splash density="port-xhdpi" src="src/static/splash/screen-xhdpi-portrait.png" />
        <preference name="xwalkMultipleApk" value="false" />
        <preference name="SplashScreenDelay" value="4000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
    </platform>
    <platform name="browser">
        <icon src="src/static/nansen_mobit-365_logo_W.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="http://*/*" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.4.0" />
    <plugin name="cordova-android-support-gradle-release" spec="^1.3.0">
        <variable name="ANDROID_SUPPORT_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-media-capture" spec="^3.0.2" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <engine name="browser" spec="^5.0.2" />
    <engine name="android" spec="^7.1.1" />
</widget>
